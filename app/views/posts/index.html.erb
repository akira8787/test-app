<h1>Hello 💎</h1>
<% flash.each do |key, value| %>
  <div class="flash <%= key %>">
    <%= value %>
  </div>
<% end %>
<div class="button-container">
  <%= button_to " 全件削除", destroy_all_posts_path, method: :delete,  form: { data: { turbo_confirm: "削除しますか？"}  }, class: "link-delete-button" %>
  <%= link_to "新しい投稿", new_post_path, class: "link-button" %>
</div>
<ul>
  <% @posts.each do |post| %>
    <li>
      <h2>
        <%= post.title %>:
      </h2>
      <p>
        <%= post.content %>
      </p>
      <span>
        <small><%= post.created_at %></small>
      </span>
      <div class="edit-delete-wrapper">
        <%= link_to "編集", edit_post_path(post), class: "link-button" %>
        <%= button_to '削除', post_path(post), method: :delete, class: "link-delete-button"%>
      </div>
    </li>
  <% end %>
</ul>
